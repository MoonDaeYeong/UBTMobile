<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   

    

                 
                                
                                                       

                 
                          
                                                                                  
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="2dp"
        app:contentPadding="10dp" android:tag="layout/list_item_more_org_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_simple"
            android:tag="binding_1"           >

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/h_barrier_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="iv_book_mark" />


            <ImageView
                android:id="@+id/iv_book_mark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/ic_bookmark_primary_dark"
                android:visibility="gone"
                android:tag="binding_2"        
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="examCode" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ubt_logo"
                android:tag="binding_3"                    
                app:layout_constraintBottom_toTopOf="@id/tv_title"
                app:layout_constraintHeight_max="100dp"
                app:layout_constraintTop_toTopOf="@id/h_barrier_1"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/josefinsans_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:padding="5dp"
                android:tag="binding_4"              
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/tv_desc"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                tools:text="title" />


            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/josefinsans_regular"
                android:gravity="center"
                android:textSize="17sp"
                android:tag="binding_5"              
                app:layout_constraintBottom_toTopOf="@id/tv_type"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:text="status" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:textAlignment="textEnd"
                android:tag="binding_6"              
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_desc"
                tools:text="date" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         