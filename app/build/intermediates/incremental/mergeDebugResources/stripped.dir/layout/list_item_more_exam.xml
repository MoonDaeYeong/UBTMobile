<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   

    

                 
                                
                                                       

                 
                          
                                                                                     
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="2dp"
        app:contentPadding="10dp" android:tag="layout/list_item_more_exam_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_simple"
            android:tag="binding_1"           >

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/h_barrier_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tv_exam_code, tv_exam_time" />


            <TextView
                android:id="@+id/tv_exam_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="binding_2"           
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tv_exam_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="examCode" />

            <TextView
                android:id="@+id/tv_exam_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_3"                                     
                android:textColor="#04dc6c"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="60 Minute" />

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ubt_logo"
                android:tag="binding_4"                    
                android:layout_marginTop="3dp"
                app:layout_constraintBottom_toTopOf="@id/tv_title"
                app:layout_constraintHeight_max="100dp"
                app:layout_constraintTop_toTopOf="@id/h_barrier_1"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/josefinsans_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="3"
                android:padding="5dp"
                android:tag="binding_5"           
                android:textSize="17sp"
                app:layout_constraintBottom_toTopOf="@id/tv_status"
                app:layout_constraintTop_toBottomOf="@id/iv_logo"
                tools:text="title" />


            <TextView
                android:id="@+id/tv_status"
                android:tag="binding_6"                   
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/josefinsans_regular"
                android:gravity="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/tv_date"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:text="status" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:textAlignment="textEnd"
                android:textSize="9sp"
                android:tag="binding_7"               
                                                      
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_status"
                tools:text="date" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         